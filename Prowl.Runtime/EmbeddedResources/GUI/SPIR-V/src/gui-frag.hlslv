struct PS_INPUT
{
    [[vk::location(0)]]
    float4 pos : SV_POSITION;

    [[vk::location(1)]]
    float4 col : COLOR0;

    [[vk::location(2)]]
    float2 uv  : TEXCOORD0;
};

[[vk::binding(1, 0)]]
Texture2D FontTexture : register(t0);

[[vk::binding(0, 1)]]
sampler FontSampler : register(s0);

float4 FS(PS_INPUT input) : SV_Target
{
    float4 out_col = input.col * FontTexture.Sample(FontSampler, input.uv);
    return out_col;
}
